<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textHeadingStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="textTitleStyle">
        <item name="android:background">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textFieldStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="questionBackCardStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="elevation">4dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--
            app:lrb_strokeWidth="1dp"
        app:lrb_explodeCount="3"
        android:padding="40dp"
        app:lrb_outterPadding="8dp"
        app:lrb_innerCircleRadius="15dp"
        app:lrb_strokeRadius="23dp"
        app:lrb_inAnimDuration="500"
        app:lrb_outAnimDuration="500"
        app:lrb_checkedColor="@android:color/holo_green_dark"
        app:lrb_unCheckedColor="@android:color/holo_red_light"
    -->

    <style name="radioButtonStyle">
        <item name="lrb_strokeWidth">1dp</item>
        <item name="lrb_explodeCount">3</item>
        <item name="android:padding">40dp</item>
        <item name="lrb_outterPadding">8dp</item>
        <item name="lrb_innerCircleRadius">15dp</item>
        <item name="lrb_strokeRadius">23dp</item>
        <item name="lrb_inAnimDuration">500</item>
        <item name="lrb_outAnimDuration">500</item>
        <item name="lrb_checkedColor">@android:color/holo_green_dark</item>
        <item name="lrb_unCheckedColor">@android:color/holo_red_light</item>

    </style>

    <style name="CounterOverFlow" parent="TextAppearance.Design.Counter.Overflow">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>


    <style name="textInputLayoutStyle">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@android:color/white</item>
    </style>


    <style name="AppNoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>
</resources>