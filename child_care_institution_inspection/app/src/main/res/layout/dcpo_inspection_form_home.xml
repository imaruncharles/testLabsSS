<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/dcpo_gradient_one"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <androidx.appcompat.widget.LinearLayoutCompat
        android:elevation="4dp"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintBottom_toTopOf="@+id/inspectionSpinnerLay"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            style="@style/textTitleStyle"
            android:text="@string/cci_inspection"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inspectionSpinnerLay"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            android:hint="@string/cci_name"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <RadioGroup
            android:layout_margin="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <me.omidh.liquidradiobutton.LiquidRadioButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:lrb_strokeWidth="1dp"
                app:lrb_explodeCount="3"
                android:padding="40dp"
                android:checked="true"
                app:lrb_outterPadding="8dp"
                app:lrb_innerCircleRadius="15dp"
                app:lrb_strokeRadius="23dp"
                app:lrb_inAnimDuration="500"
                app:lrb_outAnimDuration="500"
                app:lrb_checkedColor="@android:color/holo_green_dark"
                app:lrb_unCheckedColor="@android:color/holo_red_light"
                android:text="CWC"
                />


            <me.omidh.liquidradiobutton.LiquidRadioButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:lrb_strokeWidth="1dp"
                app:lrb_explodeCount="3"
                android:padding="40dp"
                app:lrb_outterPadding="8dp"
                app:lrb_innerCircleRadius="15dp"
                app:lrb_strokeRadius="23dp"
                app:lrb_inAnimDuration="500"
                app:lrb_outAnimDuration="500"
                app:lrb_checkedColor="@android:color/holo_green_dark"
                app:lrb_unCheckedColor="@android:color/holo_red_light"
                android:text="JJB"
                />
        </RadioGroup>


        <LinearLayout
            android:layout_margin="20dp"
            android:id="@+id/superintendentLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/staffPatternText">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/drinkingWaterText"
                style="@style/textFieldStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CCI Type" />


            <com.google.android.material.chip.ChipGroup
                app:singleSelection="true"
                app:selectionRequired="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.chip.Chip
                    android:checked="true"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="Observation Home" />
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="Place of Safety"/>

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="Special Home"/>

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>


        <Button
            android:id="@+id/cci_inspection_intro_nextBtn"
            android:layout_gravity="right"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_margin="20dp"
            android:text="@string/next"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inspectionSpinnerLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.appcompat.widget.LinearLayoutCompat>





</androidx.constraintlayout.widget.ConstraintLayout>